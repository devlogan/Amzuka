<?xml version="1.0"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/amzuka-servlet.xml,/WEB-INF/amzuka-security.xml</param-value>
	</context-param>


<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener> 

<servlet>

<servlet-name>amzuka</servlet-name>

<servlet-class>org.springframework.web.servlet.DispatcherServlet </servlet-class>

 <load-on-startup>1</load-on-startup>

<multipart-config>	
			<max-file-size>99971525</max-file-size>
			<max-request-size>99943045</max-request-size>
			<file-size-threshold>99485877</file-size-threshold>
		</multipart-config>

</servlet>


<servlet-mapping>

<servlet-name>amzuka</servlet-name>

<url-pattern>/</url-pattern>

</servlet-mapping>

<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping> 
</web-app>